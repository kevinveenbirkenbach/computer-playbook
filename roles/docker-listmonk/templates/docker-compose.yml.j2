version: "3.7"

services:

{% include 'templates/docker-postgres-service.yml.j2' %}

  application:
    restart: unless-stopped
    image: listmonk/listmonk:latest
    ports:
      - "127.0.0.1:{{http_port}}:9000"
    environment:
      - TZ=Etc/UTC
    depends_on:
      - database
    volumes:
      - ./config.toml:/listmonk/config.toml

volumes:
  database: