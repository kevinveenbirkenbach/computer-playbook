version: '3'

services:
  application:
    image: joomla
    logging:
      driver: journald
    environment:
      JOOMLA_DB_HOST: "{{database_host}}:3306"
      JOOMLA_DB_USER: "{{database_username}}"
      JOOMLA_DB_PASSWORD: "{{database_password}}"
      JOOMLA_DB_NAME: "{{database_databasename}}"
    restart: always
{% if not ( enable_central_database | lower | bool )  %}
    depends_on:
      - database
{% endif %}
    volumes:
      - data:/var/www/html
    ports:
      - "127.0.0.1:{{http_port}}:80"

{% if not ( enable_central_database | lower | bool )  %}
{% include 'templates/docker-mariadb-service.yml.j2' %}
{% endif %}

volumes:
  data:
{% if not ( enable_central_database | lower | bool )  %}
  database:
{% endif %}
