version: '3.8'
services:
  application:
    logging:
      driver: journald
      options:
        tag: "mybb_application"
    image: mybb/mybb:latest
    restart: always
    links:
      - database
    volumes:
      - data:/var/www/html
  server:
    logging:
      driver: journald
      options:
        tag: "mybb_server"
    links:
      - application
    image: nginx:mainline
    restart: always
    ports:
      - "127.0.0.1:{{http_port}}:80"
    volumes:
    - "{{docker_compose_instance_confd_directory}}:{{target_mount_conf_d_directory}}:ro"
    - "data:/var/www/html:ro"

{% include 'templates/docker-mariadb-service.yml.j2' %}

volumes:
  database:
  data:
networks:
  default:
    driver: bridge