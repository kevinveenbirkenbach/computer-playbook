version: '3.8'
services:
  application:
    logging:
      driver: journald
      options:
        tag: "mybb_application"
    image: mybb/mybb:latest
    restart: always
    links:
      - database
    volumes:
      - data:/var/www/html
  server:
    logging:
      driver: journald
      options:
        tag: "mybb_server"
    links:
      - application
    image: nginx:mainline
    restart: always
    ports:
      - "127.0.0.1:{{http_port}}:80"
    volumes:
    - "{{conf_d_server_directory}}:{{conf_d_docker_directory}}:ro"
    - "data:/var/www/html:ro"
  database:
    logging:
      driver: journald
      options:
        tag: "mybb_database"
    environment:
      POSTGRES_DB: mybb
      POSTGRES_PASSWORD: "{{mybb_database_password}}"
      POSTGRES_USER: mybb
    image: postgres:14-alpine
    volumes:
    - ${PWD}/postgres/data:/var/lib/postgresql/data:rw
    restart: always
volumes:
  database:
  data:
networks:
  default:
    driver: bridge