version: '3.2'
services:
  web:
    image: attendize_web:latest
    ports:
    - "{{http_port}}:80"
    #- "8081:443"
    volumes:
      - .:/usr/share/nginx/html
      - .:/var/www
    depends_on:
{% if not enable_central_database %}
      - database
{% endif %}
      - maildev
      - redis
      - worker
    env_file:
      - ./.env
  worker:
    image: attendize_worker:latest
    depends_on:
{% if not enable_central_database %}
      - database
{% endif %}
      - maildev
      - redis
    volumes:
      - .:/usr/share/nginx/html
      - .:/var/www

  maildev:
    image: maildev/maildev
    ports:
      - "{{ mail_interface_http_port }}:1080"

{% include 'templates/docker-redis-service.yml.j2' %}

{% if not enable_central_database %}
    depends_on:
      - database

{% include 'templates/docker-mariadb-service.yml.j2' %}
{% endif %}

volumes:
  redis:
{% if not enable_central_database %}
  database:
{% endif %}