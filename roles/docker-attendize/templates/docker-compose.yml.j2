version: '3.2'
services:
  web:
    image: attendize_web:latest
    ports:
    - "{{http_port}}:80"
    #- "8081:443"
    volumes:
      - .:/usr/share/nginx/html
      - .:/var/www
    depends_on:
      - database
      - maildev
      - redis
      - worker
    env_file:
      - ./.env
  worker:
    image: attendize_worker:latest
    depends_on:
      - database
      - maildev
      - redis
    volumes:
      - .:/usr/share/nginx/html
      - .:/var/www

{% include 'templates/docker-mariadb-service.yml.j2' %}
  
  maildev:
    image: maildev/maildev
    ports:
      - "{{ mail_interface_http_port }}:1080"
  redis:
    image: redis
volumes:
  database: